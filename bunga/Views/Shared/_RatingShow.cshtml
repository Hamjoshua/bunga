@{
    string active;
}

<div class="align-items-center d-flex flex-column">
    <div class="rating-result">
        @for (int i = 1; i <= 5; i++)
        {
            active = Model.Оценка >= i ? "active" : "";
            <span class="@active"> </span>
        }
    </div>
    <p>Оценка: <strong>@Model.Оценка</strong></p>

</div>
